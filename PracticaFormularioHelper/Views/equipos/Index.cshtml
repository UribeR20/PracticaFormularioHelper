<div>
    <h1>Mantenimiento de Equipos</h1>
</div>

<form asp-action="crearRegistro">
    <div class="form-group">
        <div class="row mb-4">
            <div class="col-sm-2">
                @Html.Label("lblNombre","Nombre")
            </div>
            <div class="col-sm-4">
                @Html.TextBox("nombre","", new {@class="form-control",placeHolder="Ingrese"})
            </div>

            <div class="col-sm-2">
                @Html.Label("lblDescripcion","Descripcion")
            </div>
            <div class="col-sm-4">
                @Html.TextArea("descripcion","", new {@class="form-control",placeHolder="Ingrese"})
            </div>

        </div>
        @*Seccion de tipo equipo*@
        <div class="row mb-4">
            <div class="col-sm-2">
                @Html.Label("lblTipoEquipo","Tipo Equipo")
            </div>
            <div class="col-sm-4">
                @Html.DropDownList("tipo_equipo_id",ViewData["listadoTiposEquipos"]as SelectList,"--Elija--", new {@class="form-control"})
            </div>

        </div>


        @*Seccion de marcas y modelo*@
        <div class="row mb-4">
            <div class="col-sm-2">
                @Html.Label("lblMarca","Marca")
            </div>
            <div class="col-sm-4">
                @Html.DropDownList("marca_id",ViewData["listadoDeMarcas"]as SelectList,"--Elija--", new {@class="form-control"})
            </div>

            <div class="col-sm-2">
                @Html.Label("lblModelo","Modelo")
            </div>
            <div class="col-sm-4">
                @Html.TextBox("modelo","",new {@class="form-control",placeHolder="Ingrese"})
            </div>

        </div>

        @*Seccion de año compra y costo*@
        <div class="row mb-4">
            <div class="col-sm-2">
                @Html.Label("lblAnioCompra","Año de Compra")
            </div>
            <div class="col-sm-4">
                @Html.TextBox("anio_compra","",new {@class="form-control",placeHolder="Ingrese"})
            </div>

        <div class="col-sm-2">
            @Html.Label("lblCosto","Costo")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("costo","",new {@class="form-control",placeHolder="Ingrese"})
        </div>

        </div>

        @*Seccion de vida util y estado equipo*@
        <div class="row mb-4">

            <div class="col-sm-2">
                @Html.Label("lblVidaUtil","Vida Util")
            </div>
            <div class="col-sm-4">
                @Html.TextBox("Vida_util","",new {@class="form-control",placeHolder="Ingrese"})
            </div>

            <div class="col-sm-2">
                @Html.Label("lblEstadoEquipos","Estados Equipos")
            </div>
            <div class="col-sm-4">
                @Html.DropDownList("estado_equipo_id",ViewData["listadoEstadosEquipos"]as SelectList,"--Elija--", new {@class="form-control"})
            </div>


        </div>

        @*BOTON*@
        <div class="row mb-4">
            <div class="col-sm-2">
            </div>
            <div class="col sm-4">
            </div>
            <div class="col-sm-2">
                <input type="submit" class="btn btn-success text-center btn-lg"/>
            </div>
            <div class="col-sm-4">
            </div>

        </div>




    </div>
</form>
